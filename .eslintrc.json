{
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "no-console": "off",
    "no-var": "error",
    "prefer-const": "error",
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "arrow-parens": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "space-before-function-paren": ["error", { "anonymous": "always", "named": "never", "asyncArrow": "always" }]
  }
}
